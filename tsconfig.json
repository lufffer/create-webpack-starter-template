{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  }
}
